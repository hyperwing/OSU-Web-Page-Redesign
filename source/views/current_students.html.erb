<%# HTML format for current students page. %>
<%
require 'json'
html_dir = File.dirname(__FILE__)
fjson = JSON.parse File.read "#{html_dir}/../data/student_data.json"
current_students = fjson['current_students']
current_page.data.title = "People"
current_page.data.stylesheet = "people"
%>
<form class="buttons">
    <button type="submit" class="tablink" id="selected" formaction="current_students.html">Current Students</button>
    <button type="submit" class="tablink" formaction="alumni.html">Alumni</button>
</form>
<div class="tabcontent">
    <% current_students.each_key do |name| %>
        <%= partial "partials/people_container",
                    :locals => {:name => name,
                                :description => current_students[name]['description'],
                                :title => current_students[name]['title'],
                                :current_job => current_students[name]['current_job'],
                                :img => current_students[name]['img_link']} %>
    <% end %>
</div>
